<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gb_white">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/gb_colorPrimary"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/gb_poppins_regular"
            android:text="Whatsapp Cleaner"
            android:textColor="@color/gb_white"
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_recent_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/layout_images"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:padding="@dimen/_8sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/gb_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gb_poppins_medium"
                            android:text="Images"
                            android:textColor="@color/gb_black"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                                android:id="@+id/imges_count"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/gb_poppins_regular"
                                android:text="Images"
                                android:textColor="@color/gb_gray"
                                android:textSize="@dimen/_11sdp" />

                            <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                                android:id="@+id/images_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/gb_poppins_regular"
                                android:text="Images"
                                android:textColor="@color/gb_gray"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                        android:id="@+id/gb_one"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/gb_textview_background"
                        android:fontFamily="@font/gb_poppins_medium"
                        android:gravity="center"
                        android:text="View"
                        android:textColor="@color/gb_white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_saved_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/layout_video"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:padding="@dimen/_8sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/gb_video" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gb_poppins_medium"
                            android:text="Videos"
                            android:textColor="@color/gb_black"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                                android:id="@+id/video_count"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/gb_poppins_regular"
                                android:text="Images"
                                android:textColor="@color/gb_gray"
                                android:textSize="@dimen/_11sdp" />

                            <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                                android:id="@+id/video_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/gb_poppins_regular"
                                android:text="Images"
                                android:textColor="@color/gb_gray"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                        android:id="@+id/gb_two"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/gb_textview_background"
                        android:fontFamily="@font/gb_poppins_medium"
                        android:gravity="center"
                        android:text="View"
                        android:textColor="@color/gb_white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_how_works"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/layout_audio"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:padding="@dimen/_8sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/gb_audio" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gb_poppins_medium"
                            android:text="Audio"
                            android:textColor="@color/gb_black"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                                android:id="@+id/audio_count"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/gb_poppins_regular"
                                android:text="Images"
                                android:textColor="@color/gb_gray"
                                android:textSize="@dimen/_11sdp" />

                            <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                                android:id="@+id/audio_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/gb_poppins_regular"
                                android:text="Images"
                                android:textColor="@color/gb_gray"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                        android:id="@+id/gb_three"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/gb_textview_background"
                        android:fontFamily="@font/gb_poppins_medium"
                        android:gravity="center"
                        android:text="View"
                        android:textColor="@color/gb_white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/layout_document"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:padding="@dimen/_8sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/gb_document" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gb_poppins_medium"
                            android:text="Document"
                            android:textColor="@color/gb_black"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                                android:id="@+id/document_count"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/gb_poppins_regular"
                                android:text="Images"
                                android:textColor="@color/gb_gray"
                                android:textSize="@dimen/_11sdp" />

                            <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                                android:id="@+id/document_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/gb_poppins_regular"
                                android:text="Images"
                                android:textColor="@color/gb_gray"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.whatsweb.whatswebscanner.gbwhats.gb_customview.CustomTextView
                        android:id="@+id/gb_four"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/gb_textview_background"
                        android:fontFamily="@font/gb_poppins_medium"
                        android:gravity="center"
                        android:text="View"
                        android:textColor="@color/gb_white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/native_container"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/gb_boder_white"
        android:orientation="vertical" />

</RelativeLayout>